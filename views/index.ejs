<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="shortcut icon" href="/public/img/logo.png" type="image/png">
    <title>GFG | Course List</title>
</head>

<body>
    <nav class="navbar navbar-light bg-dark justify-content-center">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/public/img/logo.png" alt="" width="64" height="64">
            </a>
        </div>
    </nav>

    <section id="add-course" class="d-flex my-5 flex-column justify-content-center">
        <form action="/" method="post" class="m-auto d-flex flex-column justify-content-center">
            <div class="form-floating mb-2">
                <input type="number" class="form-control" id="name" name="id" placeholder="Enter course id"
                    onfocus="handleFocus()" autocomplete="off">
                <label for="floatingInput">Course ID</label>
            </div>
            <div class="form-floating mb-2 hide">
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter course name"
                    autocomplete="off">
                <label for="floatingInput">Course Name</label>
            </div>

            <div class="form-floating mb-2 hide">
                <input type="number" class="form-control" id="hours" name="hours" placeholder="Enter hours"
                    autocomplete="off">
                <label for="floatingPassword">Hours</label>
            </div>

            <button type="submit" class="btn btn-dark">Add</button>
        </form>
    </section>

    <section id="list" class="m-5">
        <!-- <p class="h1 text-center">Course List</p> -->

        <div class="table-responsive mt-3 container">
            <table class="table">
                <thead class="thead-light">
                    <tr class="table-success">
                        <th scope="col">Course ID</th>
                        <th scope="col">Course Name</th>
                        <th scope="col">Hours</th>
                        <th scope="col">Edit / Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(e=> { %>
                        <tr>
                            <th scope="row">
                                <%= e.id %>
                                    <% const id=e.id %>
                            </th>
                            <td>
                                <%= e.name %>
                            </td>
                            <td>
                                <%= e.hours %>
                            </td>
                            <td>
                                <button type="button" class="btn btn-light my-1" onclick="editCourse()"><i
                                        class="fas fa-edit"></i></button>
                                <form action="/<%= e.id %>" method="DELETE">
                                    <button type="submit" class="btn btn-outline-danger my-1">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>

                        <% }); %>

                </tbody>
            </table>
        </div>
    </section>

    <% const today=new Date().getFullYear() %>

        <footer class="footer mt-auto py-3 bg-light">
            <div class="container">
                <span class="text-muted text-center">Anushka &copy; <%= today %> </span>
            </div>
        </footer>




        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
        <script src="/public/js/index.js"></script>
</body>

</html>